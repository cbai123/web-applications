<html>
  <head></head>
  <body>
  <% if @album_id %>
    <h1><%= @title %></h1>
    <p>
      Release year: <%= @release_year%></br>
      Artist: <%= @artist%>
    </p>
  <% else %>
    <h1>Albums</h1>
    <%@albums.each do |album|%>
    <div>
      Title: <%= album.title%></br>
      Released: <%= album.release_year%></br>
      <a href='/albums/<%= album.id%>'>Album page</a></br>
      --------
    </div>
    <% end %>
  <% end %>
  </body>
</html>